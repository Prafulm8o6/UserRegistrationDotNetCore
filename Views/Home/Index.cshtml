@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-dark text-center">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Date Of Birth
        </th>
        <th>
            Email
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
     {
        <tr>
            <td>
                <label asp-for="@item.FirstName">
                    @item.FirstName
                </label>
            </td>
            <td>
                <label asp-for="@item.LastName">
                    @item.LastName
                </label>
            </td>
            <td>
                <label asp-for="@item.DOB">
                    @item.DOB.ToShortDateString()
                </label>
            </td>
            <td>
                <label asp-for="@item.Email">
                    @item.Email
                </label>
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-controller="Home" asp-route-Id="@item.Id">
                    Edit
                </a>
            </td>
        </tr>
     }
</table>

